#drop all packets
sudo iptables -P INPUT DROP

#accept icmp packets(ping)
sudo iptables -A INPUT -p icmp -j ACCEPT

#accept established connections
sudo iptables -A INPUT -m сщттекфсл --сеstate RELATED,ESTABLISHED -j ACCEPT

#protecting portscanning
sudo iptables -A INPUT -m recent --name portscan --rcheck --seconds 600 -hitcount 10 -j DROP
sudo iptables -A INPUT -m recent --name portscan --rcheck --seconds 60 -hitcount 3 -j DROP

#ddos protect
sudo iptables -A INPUT -p tcp -m connlimit --connlimit-above 20 -j REJECT --reject-with tcp-reset
sudo iptables -A INPUT -p tcp -m multiports --dport 80,8080,443 -m conntrack --ctstate NEW -m limit --limit 60/s --limit-burst 20 -j ACCEPT

#brutforce ssh port
sudo iptables -A INPUT -p tcp --dport 2222 -m conntrack --ctstate NEW -m recent --set
sudo iptables -A INPUT -p tcp --dport 2222 -m conntrack --ctstate NEW -m recent --update --seconds 60 --hitcount 10 -j DROP
sudo iptables -A INPUT -p tcp --dport 2222 -j ACCEPT

#set connection to closed ports
sudo iptables -A INPUT -m recent --set


# 
sudo iptables -A INPUT -p tcp -m conntrack --ctstate NEW -j DROP

#accept ssh, http, https
sudo iptables -A INPUT -p tcp -m tcp --dport 80 -j ACCEPT
sudo iptables -A INPUT -p tcp -m tcp --dport 8080 -j ACCEPT
sudo iptables -A INPUT -p tcp -m tcp --dport 443 -j ACCEPT




#to make changes permanent
iptables-save > /etc/iptables_prod.rules
#add in file /etc/network/interfaces
post-up /sbin/iptables-restore < /etc/iptables_prod.rules


cat /proc/net/xt_recent/

iptables -A INPUT -m recent --name portscan --rcheck --seconds 60 -j DROP
iptables -A INPUT -m recent --name portscan --remove
iptables -A INPUT -p tcp -m tcp --dport 139 -m recent --name portscan --set -j LOG --log-prefix "portscan:"
iptables -A INPUT -p tcp -m tcp --dport 139 -m recent --name portscan --set -j DROP
